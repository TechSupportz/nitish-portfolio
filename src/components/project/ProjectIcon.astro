---
import { type TProjectIcon, ProjectIcons } from "@utils/projectIcons"

interface Props {
    type: TProjectIcon
    class?: string
}

const { type, class: className = "" } = Astro.props
---

<img
    src={ProjectIcons[type].src}
    alt={`${type} icon`}
    class:list={[
        className,
        {
            "size-4": !className.includes("size-"),
        },
    ]}
/>
